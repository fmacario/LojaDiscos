<Page x:Class="LojaDiscos.CriarDisco"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LojaDiscos"
      mc:Ignorable="d" 
      WindowTitle="Novo Disco">
    <Page.Resources>
        <local:lojadiscosDataSet x:Key="lojadiscosDataSet"/>
        <CollectionViewSource x:Key="generoViewSource" Source="{Binding Genero, Source={StaticResource lojadiscosDataSet}}"/>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MaxWidth="100"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock x:Name="codigo" Text="Código" FontSize="20" Grid.Column="1" Grid.Row="1"/>
        <TextBox x:Name="codigo2" FontSize="17" Grid.ColumnSpan="3" Grid.Row="1" Height="30" VerticalAlignment="Top" Grid.Column="2" HorizontalAlignment="Left" MaxWidth="800" Margin="10,0,10,0"/>
       
        <TextBlock x:Name="artista" Text="Artista" FontSize="20" Grid.Column="1" Grid.Row="2"/>
        <TextBox x:Name="artista2" FontSize="17" Grid.ColumnSpan="3" Grid.Row="2" Height="30" VerticalAlignment="Top" Grid.Column="2" HorizontalAlignment="Stretch" MaxWidth="800" Margin="10,0,10,0"/>

        <TextBlock x:Name="album" Text="Álbum" FontSize="20" Grid.Column="1" Grid.Row="3"/>
        <TextBox x:Name="album2" FontSize="17" Grid.ColumnSpan="3" Grid.Column="2" Grid.Row="3" Height="30" VerticalAlignment="Top" HorizontalAlignment="Stretch" MaxWidth="800" Margin="10,0,10,0"/>

        <TextBlock x:Name="ano" Text="Ano" FontSize="20" Grid.Column="1" Grid.Row="4"/>
        <TextBox x:Name="ano2" FontSize="17" Grid.ColumnSpan="1" Grid.Row="4" Height="30" VerticalAlignment="Top" Grid.Column="2" HorizontalAlignment="Stretch" Width="{Binding ElementName=Container,Path=ActualWidth}" MaxWidth="100" Margin="10,0,10,0" MaxLength="4"/>


        <TextBlock x:Name="genero" Text="Género" FontSize="20" Grid.Column="1" Grid.Row="5"/>
        <ComboBox Text="Escolher Género" Name="GeneroCB" Height="30" Grid.ColumnSpan="1" Grid.Row="5" VerticalAlignment="Top" Grid.Column="2" HorizontalAlignment="Stretch" MaxWidth="100" Margin="10,0,10,0" ItemsSource="{Binding}" >
        </ComboBox>

        <TextBlock x:Name="tipo" Text="Tipo" FontSize="20" Grid.Column="1" Grid.Row="6"/>
        <ComboBox Text="Escolher Tipo" Name="TipoCB" Height="30" Grid.ColumnSpan="1" Grid.Row="6" VerticalAlignment="Top" Grid.Column="2" HorizontalAlignment="Stretch" MaxWidth="100" Margin="10,0,10,0" ItemsSource="{Binding}" >
        </ComboBox>



        <Button x:Name="criarCliente" Content="Adicionar Disco" Grid.Column="4" Grid.Row="7" Width="150" Height="50" Margin="10,0,10,0"/>

    </Grid>
</Page>
