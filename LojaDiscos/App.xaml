<Application x:Class="LojaDiscos.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LojaDiscos"
             StartupUri="login.xaml">

    <Application.Resources>

        <Style x:Key="botoesMenu" TargetType="{x:Type Button}">
            <Setter Property="Width" Value="100" />
            <Setter Property="Height" Value="50" />
        </Style>
        <Style x:Key="MyWindowStyle">
            <Setter Property="Control.Background" Value="DarkGray"/>
            <Setter Property="Window.Title" Value="Styled Window"/>
        </Style>

    </Application.Resources>

</Application>
