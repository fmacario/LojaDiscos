<Application x:Class="LojaDiscos.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LojaDiscos"
            StartupUri="MainWindow.xaml">

    <Application.Resources>

        <Style x:Key="botoesMenu" TargetType="{x:Type Button}">
            <Setter Property="Width" Value="100" />
            <Setter Property="Height" Value="50" />
            <Setter Property="Background" Value="#00bf8c"/>
        </Style>
        <Style x:Key="MyWindowStyle">
            <Setter Property="Control.Background" Value="#FF2D2D30"/>
            <Setter Property="Window.Title" Value="Styled Window"/>
        </Style>

    </Application.Resources>

</Application>
